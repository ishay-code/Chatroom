<%- include('partials/header.ejs') %>
<script src = "/javascripts/register_information.js" ></script>

<%- include('partials/titleAndMessage.ejs') %>
<!-- Registration Form -->
<form id = "registerForm" action="/users/register-password" method="post">

    <div class="form-group row mb-1">
        <div class="col-12">
            <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    placeholder="Enter your email"
                    required
                    minlength="3"
                    maxlength="32"
                    title="Please enter a valid email address."
                    value = "<%= email %>"
            >
        </div>
    </div>

    <div class="form-group row">
        <div class="col-12 mb-1">
            <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    class="form-control"
                    placeholder="Enter your first name"
                    required
                    minlength="3"
                    maxlength="32"
                    pattern="[a-zA-Z]+"
                    title="First name must contain only letters and be between 3-32 characters long."
                    value = "<%= firstName %>"
            >
        </div>
    </div>

    <div class="form-group row">
        <div class="col-12 mb-1">
            <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    class="form-control"
                    placeholder="Enter your last name"
                    required
                    minlength="3"
                    maxlength="32"
                    pattern="[a-zA-Z]+"
                    title="Last name must contain only letters and be between 3-32 characters long."
                    value = "<%= lastName %>"
            >
        </div>
    </div>


    <div class="form-group row">
        <div class="col-12 ">
            <button id = "RegisterButton" type="submit" class="btn btn-primary w-100">Next</button>
        </div>
    </div>
</form>

<!-- Link to Login -->
<p class="text-center">already registered? Go to <a href="/login">login</a> page</p>
</div>

