<%- include('partials/header.ejs') %>
<%- include('partials/titleAndMessage.ejs') %>
    <!-- Registration Form -->
    <form action="/login" method="post">

        <div class=" row ">
            <div class="col-12 ">
                <label for="password"></label>
                <input
                        class = "form-control"
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Enter your password"
                        required
                        minlength="3"
                        maxlength="32"
                        title="Password must be between 3-32 characters long.">
            </div>
        </div>
        <div class=" row mb-1">
            <div class="col-12 ">
                <label for="password"></label>
                <input
                        class = "form-control"
                        type="password"
                        name="confirmPassword"
                        placeholder="confirm your password"
                        required
                        minlength="3"
                        maxlength="32"
                        title="Password must be between 3-32 characters long.">
            </div>
        </div>

        <div class="form-group row">
            <div class="col-12 text-center ">
                <button type="button" class="btn btn-secondary me-1" onclick="window.location = '/register'">Back</button>
                <button id = "RegisterPasswordButton"  type="submit" class="btn btn-primary  ">Register</button>
            </div>
        </div>
    </form>

    <!-- Link to Login -->

</div>


</body>
</html>
